extends ../layouts/common.pug

block head
     title Login Account

block content
      .container
          h2.text-center Login
          if errors 
               each error in errors 
                    .alert.alert-danger.w-75.mx-auto.my-2= error
          form(action="/login", method="post").w-50.m-auto
               input.form-control.my-2(type="text", name="username", placeholder="Email Address or Phone Number", value=username||"")
               input.form-control.my-2(type="password", name="pass", placeholder="password", value=pass||"")
               .d-flex.justify-content-between.align-items-center
               a.d-flex.justify-content-end(href="/forgot") forgot password?
               input.btn.btn-primary.w-50.d-block.mx-auto(type="submit", name="submit", value="Login")
               .d-flex.justify-content-center
                    span Do not have an account?  
                         a(href="/register") create new account